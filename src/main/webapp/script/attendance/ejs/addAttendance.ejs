


<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content ">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                </button>
                <h4 class="modal-title" id="myModalLabel"><%=data.title%></h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" id="attendanceForm" method="post">
                    <input type="hidden" id="id" name="id" value="<%=data.id?data.id:''%>">
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label  class="col-sm-4 control-label">员工</label>
                                <div class="col-sm-8">
                                    <select class="form-control required" id="empId" name="empId" >
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-sm-4 control-label">考勤日期</label>
                                <div class="col-sm-8">
                                    <input  type="text" id="attendanceDate"  name="attendanceDate" class="form-control  Wdate required " value="<%=data.attendanceDate?common.fn.formatMonth(data.attendanceDate):''%>"  onFocus="WdatePicker({dateFmt:'yyyy-MM'})"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label for="takeOff" class="col-sm-4 control-label">调休(小时)</label>

                                <div class="col-sm-8">
                                    <input class="form-control required" value="<%=data.takeOff%>" maxlength="4" id="takeOff" name="takeOff" />

                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label for="causalLeave" class="col-sm-4 control-label">事假(小时)</label>

                                <div class="col-sm-8">
                                    <input class="form-control required" maxlength="4" value="<%=data.causalLeave%>" id="causalLeave" name="causalLeave" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-sm-4 control-label">病假(小时)</label>
                                <div class="col-sm-8">
                                    <input  type="text" id="sickLeave" maxlength="4" name="sickLeave" value="<%=data.sickLeave%>" class="form-control  required " />
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-sm-4 control-label">旷工(小时)</label>
                                <div class="col-sm-8">
                                    <input  type="text" id="skipWork" maxlength="4" name="skipWork" value="<%=data.skipWork%>" class="form-control  required " />
                                </div>
                            </div>
                        </div>
                    </div>


                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary"  onclick="attendance.fn.save('<%=data.randomDialogId%>');">保存</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            </div>
        </div>
    </div>
</div>
<style>
    .form-control[disabled], .form-control[readonly], fieldset[disabled] .form-control {
        background-color: #f4f6f6;
        border-color: #d5dbdb;
        color: #34495e;
        cursor: default;
        opacity: 1;
        filter: alpha(opacity=70);
    }
</style>

