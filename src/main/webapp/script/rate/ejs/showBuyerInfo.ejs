<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content ">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                </button>
                <h4 class="modal-title" id="myModalLabel">联系信息</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" id="applicantForm" method="post">
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label  class="col-sm-4 control-label">应聘者</label>
                                <div class="col-sm-6">
                                    <input class="form-control required " maxlength="20" value="" id="applicantName" name="applicantName"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-sm-4 control-label">招聘需求</label>
                                <div class="col-sm-6">

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-sm-4 control-label">联系电话</label>
                                <div class="col-sm-6">
                                    <input class="form-control required positiveInteger" maxlength="11" value="" id="tel" name="tel"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary"  onclick="applicant.fn.save('<%=data.randomDialogId%>','<%=data.id%>');">保存</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            </div>
        </div>
    </div>
</div>
<style>
    .form-control[disabled], .form-control[readonly], fieldset[disabled] .form-control {
        background-color: #f4f6f6;
        border-color: #d5dbdb;
        color: #34495e;
        cursor: default;
        opacity: 1;
        filter: alpha(opacity=70);
    }
</style>

