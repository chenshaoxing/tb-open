


<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content ">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                </button>
                <h4 class="modal-title" id="myModalLabel"><%=data.title%></h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" id="accountUpdateForm" method="post">
                    <input type="hidden" id="id" name="id" value="<%=data.id?data.id:''%>">
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label  class="col-sm-4 control-label">原密码:</label>
                                <div class="col-sm-6">
                                    <input class="form-control required " type="password"  id="oldPwd" name="oldPwd"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-sm-4 control-label">新密码</label>
                                <div class="col-sm-6">
                                    <input type="password" class="form-control" id="newPwd" name="newPwd" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label  class="col-sm-4 control-label">新密码确认:</label>
                                <div class="col-sm-6">
                                    <input class="form-control required " type="password" id="againNewPwd" name="againNewPwd"/>
                                </div>
                            </div>
                        </div>
                    </div>

                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary"  onclick="system.fn.save('<%=data.randomDialogId%>');">保存</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            </div>
        </div>
    </div>
</div>
<style>
    .form-control[disabled], .form-control[readonly], fieldset[disabled] .form-control {
        background-color: #f4f6f6;
        border-color: #d5dbdb;
        color: #34495e;
        cursor: default;
        opacity: 1;
        filter: alpha(opacity=70);
    }
</style>

