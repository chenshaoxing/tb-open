


<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content ">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                </button>
                <h4 class="modal-title" id="myModalLabel"><%=data.title%></h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" id="contractForm" method="post">
                    <input type="hidden" id="id" name="id" value="<%=data.id?data.id:''%>">
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label  class="col-sm-4 control-label">员工</label>
                                <div class="col-sm-8">
                                    <select class="form-control required" id="empId" name="empId" >
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-sm-4 control-label">签订日期</label>
                                <div class="col-sm-8">
                                    <input  type="text" id="signDate" name="signDate" class="form-control  Wdate required " value="<%=data.signDate?common.fn.formatDate(data.signDate):''%>" onFocus="WdatePicker({dateFmt:'yyyy-MM-dd',maxDate:'#F{$dp.$D(\'startDate\',{d:0});}'})"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label for="contractType" class="col-sm-4 control-label">合同类型</label>

                                <div class="col-sm-8">
                                    <select class="form-control required" id="contractType" name="contractType" >
                                        <option value="">请选择</option>
                                        <option value="LABOR">劳动合同</option>
                                        <option value="APPLICANT">应聘合同</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label for="contractStatus" class="col-sm-4 control-label">合同状态</label>

                                <div class="col-sm-8">
                                    <select class="form-control required" id="contractStatus" name="contractStatus" >
                                        <option value="">请选择</option>
                                        <option value="NORMAL">正常</option>
                                        <option value="TIMEOUT">过期</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-sm-4 control-label">起始日期</label>
                                <div class="col-sm-8">
                                    <input  type="text" id="startDate" name="startDate" class="form-control  Wdate required " value="<%=data.startDate?common.fn.formatDate(data.startDate):''%>" onFocus="WdatePicker({dateFmt:'yyyy-MM-dd',maxDate:'#F{$dp.$D(\'endDate\',{d:0});}'})"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <label class="col-sm-4 control-label">结束日期</label>
                                <div class="col-sm-8">
                                    <input  type="text" id="endDate" name="endDate" class="form-control  Wdate required " value="<%=data.endDate?common.fn.formatDate(data.endDate):''%>" onFocus="WdatePicker({dateFmt:'yyyy-MM-dd',minDate:'#F{$dp.$D(\'startDate\',{d:0});}'})"/>
                                </div>
                            </div>
                        </div>
                    </div>


                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary"  onclick="contract.fn.save('<%=data.randomDialogId%>');">保存</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
            </div>
        </div>
    </div>
</div>
<style>
    .form-control[disabled], .form-control[readonly], fieldset[disabled] .form-control {
        background-color: #f4f6f6;
        border-color: #d5dbdb;
        color: #34495e;
        cursor: default;
        opacity: 1;
        filter: alpha(opacity=70);
    }
</style>

